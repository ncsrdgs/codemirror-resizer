{
  "manifest_version": 3,
  "name": "CodeMirror Resizer",
  "version": "1.1",
  "description": "Permite redimensionar editores CodeMirror com o mouse e personalizar a fonte",
  "permissions": ["storage"],
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}